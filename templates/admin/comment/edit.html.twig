{% extends 'admin/base.html.twig' %}

{% block title %}Modification Commentaire numéro
	{{comment.id}}
{% endblock %}


{% block body %}
	<div class="container">
		<h1 class="my-5">Modification la commentaire n°
			{{comment.id }}
		</h1>

		<div class="alert alert-info">
			<strong>Annonce liée :</strong> {{comment.ad.title}}<br>
			<strong>Auteur :</stron> {{comment.author.fullName}}<br>
			<strong>Date de création :</stron> {{comment.createdAt|date('d/m/Y H:i')}}<br>
			<strong>Note donnée :</stron> {{comment.rating }}<br>

	    </div>

		{{ form_start(form)}}
		{{ form_widget(form)}}

		<button type="submit" class="btn btn-primary">
			<i class="fas fa-check"></i>
			Enregistrer les modifications
		</button>

		{{ form_end(form)}}
	</div>
{% endblock %}

