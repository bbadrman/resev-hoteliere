{% extends 'admin/base.html.twig' %}

{% block title %}
    Administration des réservations !
        
    
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">
            Gestion des réservations
                    
        </h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Id
                                            
                    </th>
                    <th>
                        Date
                                            
                    </th>
                    <th>
                        Visiteur
                                            
                    </th>
                    <th>
                        Annonce
                                            
                    </th>
                    <th>
                        Durée
                                            
                    </th>
                    <th>
                        Montant
                                            
                    </th>
                    <th>
                        Actions
                                            
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for booking in pagination.data %}

                    <tr>
                        <td>
                            {{ booking.id }}
                        </td>
                        <td>
                            {{ booking. createdAt|date('d/m/Y H:i') }}
                        </td>

                        <td>
                            <img src="{{ booking.booker.picture }}" alt="Avatar de {{ booking.booker.fullName }}" class="avatar avatar-micro mr-2">
                                {{ booking.booker.fullName }}
                            </td>
                            <td>

                                {{ booking.ad.title }}
                            </td>
                            <td>
                                <span class="btn btn-success">
                                {{ booking.duration }}
                                </span>
                            </td>
                            <td>
                                <span class="btn btn-success">
                                {{ booking.amount|number_format(2, ',', '') }}
                                &euro;
                                </span>                        
                            </td>
                            <td>
                                <a href="{{ path('admin_bookings_edit', {'id': booking.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('admin_bookings_delete', {'id': booking.id}) }}" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{{ pagination.display() }}

</div>{% endblock %}